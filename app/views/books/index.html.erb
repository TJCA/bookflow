<%= render partial: 'shared/path', locals: {
    link_layers: [
        { name: "个人中心", link: profile_path },
        { name: "库存列表" }
    ]
} %>

<div class="center-block container row">
  <div class="col-md-4 col-md-offset-4">
  <%= render 'shared/search' %>
  <div class="list-group">
    <% @books.each do |book| %>
      <% if book.deprecated %>
        <a class="list-group-item list-group-item-warning" href=<%= book_path(book) %>>
          <span class="badge"><%= book.ori_price * book.ratio %></span>
          <%= book.title %>
        </a>
      <% else %>
        <a class="list-group-item" href=<%= book_path(book) %>>
          <span class="badge"><%= book.ori_price * book.ratio %></span>
          <%= book.title %>
        </a>
      <% end %>
    <% end %>
  </div>
      <%# Here centering has some problems. %>
  <%= will_paginate @books, renderer: BootstrapPagination::Rails, inner_window: 1, outer_window: 0 %>
  </div>
</div>