<%= render partial: 'shared/path', locals: {
    link_layers: [
        { name: "个人中心", link: profile_path },
        { name: "修改密码" }
    ]
} %>

<div class="center-block container row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= form_tag '/me/password', method: :put, id: "chpwd-form" %>
        <div class="form-group">
          <%= password_field_tag 'password', nil, placeholder: "新密码", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= password_field_tag 'password-confirm', nil, placeholder: "确认新密码", class: "form-control" %>
        </div>
        <%= button_tag "提交", class: "btn btn-primary btn-block", id: "submit-btn" %>
    </div>
  </div>
</div>