<%= render partial: 'shared/path', locals: {
    link_layers: [
        { name: "忘记密码" }
    ]
} %>

<div class="center-block container row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= form_tag '/login/message', method: :post, id: 'msg-login' %>
      <div class="form-group">
        <%= text_field_tag 'school_id', nil, placeholder: '学号', class: 'form-control' %>
      </div>
      <div class="before-verify">
        <div class="form-group">
          <%#= button_tag '发送短信', class: 'btn btn-primary btn-block' , id: 'send_msg' %>
          <a class="btn btn-primary btn-block" id="send_msg">发送短信</a>
        </div>
      </div>
      <div class="after-verify" hidden>
        <div class="form-group">
          <%= text_field_tag 'verify_number', nil, placeholder: '短信验证码', class: 'form-control' %>
        </div>
        <%= button_tag '登录', class: "btn btn-primary btn-block", id: "submit-btn" %>
      </div>
    </div>
  </div>
</div>
